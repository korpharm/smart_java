package com.ict.edu;

public class Ex07 {
public static void main(String[] args) {
  // while문:for문과 같은 반복문
	//형식1:
	//   초기식
	//   while(조건식){
	 //       조건식 참일때 실행문;
	 //     증감식
	 //}
	// while문 끝을 만나면 무조건 조건식으로 간다
	        
	
	//형식2:
          //  초기식
		//   while(true){
	     //  if(빠져나갈 조건) break;
		 //       조건식 참일때 실행문;
		 //     증감식
	    //}
		// while문 끝을 만나면 무조건 조건식으로 간다
	
	//0~10까지 출력
	
	int i=0;
	while(i<11) {
		System.out.println(i);
		i++;
	}
	
	for (int j = 0; j <11; j++) {
		System.out.println(j);
	}
		        
}
}
